<div class="main-container clearfix">
    <div class="main-left">
        <div class="product-detail">
            <div class="pr-details pr-container" prid="28764385" >
                <div class="container">

                    <!-- Full-width images with number text -->
                    <div class="mySlides">
                        <div class="numbertext">1 / 3</div>
                        <img src="@Model.image"  style="width: 1200px">
                    </div>

                    <div class="mySlides">
                        <div class="numbertext">2 / 3</div>
                        <img src="@Model.image2" style="width: 1200px ">
                    </div>

                    <div class="mySlides">
                        <div class="numbertext">3 / 3</div>
                        <img src="@Model.image3" style="width: 1200px ">
                    </div>                    

                    <!-- Next and previous buttons -->
                    <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
                    <a class="next" onclick="plusSlides(1)">&#10095;</a>

                    <!-- Image text -->
                    <div class="caption-container">
                        <p id="caption"></p>
                    </div>

                    <!-- Thumbnail images -->
                    <div class="row">
                        <div class="column">
                            <img class="demo cursor" src="@Model.image" style="width:120px" onclick="currentSlide(1)" >
                        </div>
                        <div class="column">
                            <img class="demo cursor" src="@Model.image2" style="width: 120px" onclick="currentSlide(2)" >
                        </div>
                        <div class="column">
                            <img class="demo cursor" src="@Model.image3" style="width: 120px" onclick="currentSlide(3)" >
                        </div>
                        
                    </div>
                </div>
                    <div id="popup">
                    <div class="icon-close"></div>
                                  <div class="popup-pagination">
